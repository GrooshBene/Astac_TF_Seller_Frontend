<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/what_is_today_mood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:textSize="10dp"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorPrimaryDark"
            android:hint="이름을 입력해주세요!"
            android:backgroundTint="@color/colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:textSize="10dp"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:hint="생략 없이 작성해주세요!"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:textSize="10dp"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:hint="사업자등록시 입력한 주소로 입력해 주세요!"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:textSize="10dp"
            android:hint="010-1234-5678"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:textSize="12dp"
            android:text="오픈 시간"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/colorPrimaryDark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="5.5dp"
            android:layout_marginLeft="5.5dp"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="폐점 시간"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:textSize="10dp"
            android:hint="오늘의 분위기 박스에 적힌 번호를 입력해주세요!"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:textSize="10dp"
            android:hint="사업자 등록증에 적힌 사업자번호를 입력해주세요!"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
    <Button
        android:layout_marginTop="45dp"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="등록"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        />
</LinearLayout>